{
  "name": "gatewaystack",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*", "tools/*", "demos/*"],
  "scripts": {
    "bootstrap": "npm i",
    "clean": "git clean -fdX **/dist || true",
    "build": "tsc -b packages/request-context packages/identifiabl-core packages/identifiabl packages/transformabl-core packages/transformabl packages/validatabl-core packages/validatabl packages/limitabl packages/proxyabl packages/explicabl packages/compat packages/integrations apps/gateway-server apps/admin-ui",
    "dev:server": "npm --workspace apps/gateway-server run dev",
    "dev:admin": "npm --workspace apps/admin-ui run dev",
    "dev": "npm run dev:server",
    "build:server": "npm --workspace apps/gateway-server run build",
    "build:admin": "npm --workspace apps/admin-ui run build",
    "start:server": "npm --workspace apps/gateway-server run start",
    "start:admin": "npm --workspace apps/admin-ui run preview",
    "test": "vitest run --config ./vitest.config.mts --reporter=verbose && npm run conformance:report",
    "test:watch": "vitest --config ./vitest.config.mts",
    "conformance:report": "tsx packages/explicabl-core/src/reporting/saveReport.ts",
    "demo:mcp": "npm-run-all -p demo:issuer demo:gateway demo:mcp-server",
    "demo:issuer": "npm run -w @gatewaystack/demo-mcp-server dev",
    "demo:mcp-server": "npm run -w @gatewaystack/demo-mcp-server dev",
    "demo:gateway": "npm run -w apps/gateway-server dev",
    "demo:apps": "npm run -w @gatewaystack/demo-chatgpt-connector dev"
  },
  "devDependencies": {
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^22.7.5",
    "@types/supertest": "^2.0.16",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.14",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "express-rate-limit": "^8.2.1"
  }
}
