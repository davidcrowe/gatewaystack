{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [],
    "baseUrl": ".",
        "paths": {
          "@gatewaystack/identifiabl-core": ["packages/identifiabl-core/src"],
          "@gatewaystack/identifiabl": ["packages/identifiabl/src"],

          "@gatewaystack/transformabl-core": ["packages/transformabl-core/src"],
          "@gatewaystack/transformabl": ["packages/transformabl/src"],

          "@gatewaystack/validatabl-core": ["packages/validatabl-core/src/index.ts"],
          "@gatewaystack/validatabl": ["packages/validatabl/src"],

          "@gatewaystack/limitabl-core": ["packages/limitabl-core/src"],
          "@gatewaystack/limitabl": ["packages/limitabl/src"],

          "@gatewaystack/proxyabl-core": ["packages/proxyabl-core/src"],
          "@gatewaystack/proxyabl": ["packages/proxyabl/src"],

          "@gatewaystack/explicabl-core": ["packages/explicabl-core/src"],
          "@gatewaystack/explicabl": ["packages/explicabl/src"],

          "@gatewaystack/request-context": ["packages/request-context/src/index.ts"],
          "@gatewaystack/request-context/*": ["packages/request-context/src/*"],

          "@gatewaystack/integrations": ["packages/integrations/src"],
          "@gatewaystack/compat": ["packages/compat/src"]
        }
      },
  "exclude": ["dist", "build", "node_modules"]
}

